<h1> Fornecedores
</h1>

<%if @suppliers.any?%>
  <table>
    <thread>
      <tr>
        <th> Nome </th>
        <th> Localização </th>
      </tr>
    </thread>
    <tbody>
      <% @suppliers.each do |supplier|%>
      <tr>
        <td><%= link_to supplier.brand_name, supplier %></td>  
        <td><%= supplier.city %> - <%= supplier.state %></td>  
      </tr>  
      <%end%>
    </tbody>
  </table>
<%else%>
  <p> Não existem fornecedores cadastrados. </p>

<%end%>
<%=link_to  'Voltar', root_path%>
<%= link_to "Cadastrar novo fornecedor", new_supplier_path %>